{
  "name": "json-text-lookup-for-vscode",
  "displayName": "JSON text lookup for VSCode",
  "description": "Hover over a object reference to see the associated string",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.94.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:json",
    "onLanguage:javascript",
    "onHover"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "JsonTextLookup",
      "properties": {
        "json-text-lookup-for-vscode.jsonFilePath": {
          "type": "string",
          "default": "./data.json",
          "description": "Path to the JSON file used for hover tooltips"
        }
      }
    },
    "commands": [
      {
        "command": "extension.findAllSearch",
        "title": "Translation search"
      }
    ],
    "languages": [
      {
        "id": "json",
        "aliases": [
          "JSON",
          "json"
        ],
        "extensions": [
          ".json"
        ]
      },
      {
        "id": "javascript",
        "extensions": [
          ".js",
          ".jsx",
          ".ts",
          ".tsx"
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.94.0",
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.7.0",
    "eslint": "^9.13.0",
    "typescript": "^5.6.3",
    "ts-loader": "^9.5.1",
    "webpack": "^5.95.0",
    "webpack-cli": "^5.1.4",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
